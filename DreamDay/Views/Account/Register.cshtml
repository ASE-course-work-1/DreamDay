@model dynamic
  @{
      ViewData["Title"] = "Register";
  }
  <div class="row justify-content-center">
      <div class="col-md-6">
          <div class="card">
              <div class="card-header bg-primary text-white">
                  <h4><i class="fas fa-user-plus me-2"></i>Register</h4>
              </div>
              <div class="card-body">
                  <form asp-action="Register" method="post" class="mt-3">
                      <div class="mb-3">
                          <label class="form-label"><i class="fas fa-user me-2"></i>Username</label>
                          <input type="text" name="username" class="form-control" required />
                      </div>
                      <div class="mb-3">
                          <label class="form-label"><i class="fas fa-envelope me-2"></i>Email</label>
                          <input type="email" name="email" class="form-control" required />
                      </div>
                      <div class="mb-3">
                          <label class="form-label"><i class="fas fa-lock me-2"></i>Password</label>
                          <input type="password" name="password" class="form-control" required />
                      </div>
                      <div class="mb-3">
                          <label class="form-label"><i class="fas fa-users me-2"></i>Role</label>
                          <select name="role" class="form-select" required>
                              <option value="Couple">Couple</option>
                              <option value="Planner">Planner</option>
                          </select>
                      </div>
                      <button type="submit" class="btn btn-primary w-100"><i class="fas fa-check me-2"></i>Register</button>
                      @if (!ViewData.ModelState.IsValid)
                      {
                          <div class="error-message mt-3">
                              @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                              {
                                  <p><i class="fas fa-exclamation-circle me-2"></i>@error.ErrorMessage</p>
                              }
                          </div>
                      }
                  </form>
              </div>
          </div>
      </div>
  </div>