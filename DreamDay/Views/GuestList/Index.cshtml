@model IEnumerable<DreamDay.Models.Guest>
  @{
      ViewData["Title"] = "Guest List";
      var weddingId = ViewBag.WeddingId;
  }
  <div class="row justify-content-center">
      <div class="col-12">
          <h1 class="text-center mb-4"><i class="fas fa-users me-2"></i>Guest List</h1>
          <a href="/GuestList/Create/@weddingId" class="btn btn-success mb-3"><i class="fas fa-plus me-2"></i>Add Guest</a>
          <div class="card">
              <div class="card-body">
                  <table class="table table-hover">
                      <thead>
                          <tr>
                              <th>Name</th>
                              <th>RSVP</th>
                              <th>Meal Preference</th>
                              <th>Seating</th>
                              <th>Actions</th>
                          </tr>
                      </thead>
                      <tbody>
                          @foreach (var guest in Model)
                          {
                              <tr>
                                  <td>@guest.Name</td>
                                  <td>@guest.RSVP</td>
                                  <td>@guest.MealPreference</td>
                                  <td>@guest.SeatingArrangement</td>
                                  <td>
                                      <a href="/GuestList/Edit/@guest.Id" class="btn btn-sm btn-primary"><i class="fas fa-edit me-2"></i>Edit</a>
                                  </td>
                              </tr>
                          }
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>