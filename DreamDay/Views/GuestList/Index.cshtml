@model List<DreamDay.Models.Guest>
    @{
        ViewData["Title"] = "Guest List";
        int weddingId = ViewBag.WeddingId;
    }
    <h1>Guest List</h1>
    <a asp-action="Create" asp-route-weddingId="@weddingId" class="btn btn-success mb-3">Add Guest</a>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>RSVP</th>
                <th>Meal Preference</th>
                <th>Seating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var guest in Model)
            {
                <tr>
                    <td>@guest.Name</td>
                    <td>@guest.RSVP</td>
                    <td>@guest.MealPreference</td>
                    <td>@guest.SeatingArrangement</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@guest.Id" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>