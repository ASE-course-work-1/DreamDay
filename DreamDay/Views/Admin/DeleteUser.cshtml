@model DreamDay.Models.User
  @{
      ViewData["Title"] = "Delete User";
  }
  <div class="row justify-content-center">
      <div class="col-md-6">
          <div class="card">
              <div class="card-header bg-danger text-white">
                  <h4><i class="fas fa-trash-alt me-2"></i>Delete User</h4>
              </div>
              <div class="card-body">
                  <h5>Are you sure you want to delete @Model.UserName?</h5>
                  <form asp-action="DeleteUserConfirmed" method="post" class="mt-3">
                      <input type="hidden" asp-for="Id" />
                      <button type="submit" class="btn btn-danger w-100"><i class="fas fa-trash-alt me-2"></i>Delete</button>
                      <a href="/Admin/ManageUsers" class="btn btn-secondary w-100 mt-2"><i class="fas fa-times me-2"></i>Cancel</a>
                  </form>
              </div>
          </div>
      </div>
  </div>