@model DreamDay.Models.User
  @{
      ViewData["Title"] = "Delete User";
  }
  <h1>Delete User</h1>
  <h3>Are you sure you want to delete @Model.UserName?</h3>
  <form asp-action="DeleteUserConfirmed" method="post" class="mt-4">
      <input type="hidden" asp-for="Id" />
      <button type="submit" class="btn btn-danger">Delete</button>
      <a href="/Admin/ManageUsers" class="btn btn-secondary">Cancel</a>
  </form>