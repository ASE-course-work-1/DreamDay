@model IEnumerable<DreamDay.Models.User>
  @{
      ViewData["Title"] = "Manage Users";
  }
  <h1>Manage Users</h1>
  <table class="table">
      <thead>
          <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Role</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tbody>
          @foreach (var user in Model)
          {
              <tr>
                  <td>@user.UserName</td>
                  <td>@user.Email</td>
                  <td>@user.Role</td>
                  <td>
                      <a href="/Admin/DeleteUser/@user.Id" class="btn btn-sm btn-danger">Delete</a>
                  </td>
              </tr>
          }
      </tbody>
  </table>