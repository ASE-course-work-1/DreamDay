@model IEnumerable<DreamDay.Models.TimelineEvent>
  @{
      ViewData["Title"] = "Timeline";
      var weddingId = ViewBag.WeddingId;
  }
  <div class="row justify-content-center">
      <div class="col-12">
          <h1 class="text-center mb-4"><i class="fas fa-clock me-2"></i>Wedding Timeline</h1>
          <a href="/Timeline/Create/@weddingId" class="btn btn-success mb-3"><i class="fas fa-plus me-2"></i>Add Event</a>
          <div class="card">
              <div class="card-body">
                  <table class="table table-hover">
                      <thead>
                          <tr>
                              <th>Event</th>
                              <th>Time</th>
                              <th>Description</th>
                          </tr>
                      </thead>
                      <tbody>
                          @foreach (var evt in Model)
                          {
                              <tr>
                                  <td>@evt.EventName</td>
                                  <td>@evt.Time.ToString(@"hh\:mm")</td>
                                  <td>@evt.Description</td>
                              </tr>
                          }
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>