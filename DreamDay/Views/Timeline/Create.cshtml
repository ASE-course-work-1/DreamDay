@model DreamDay.Models.TimelineEvent
  @{
      ViewData["Title"] = "Create Timeline Event";
  }
  <div class="row justify-content-center">
      <div class="col-md-6">
          <div class="card">
              <div class="card-header bg-primary text-white">
                  <h4><i class="fas fa-plus me-2"></i>Create Timeline Event</h4>
              </div>
              <div class="card-body">
                  <form asp-action="Create" method="post" class="mt-3">
                      <input type="hidden" asp-for="WeddingId" />
                      <div class="mb-3">
                          <label asp-for="EventName" class="form-label"><i class="fas fa-calendar-alt me-2"></i>Event Name</label>
                          <input asp-for="EventName" class="form-control" required />
                          <span asp-validation-for="EventName" class="error-message"></span>
                      </div>
                      <div class="mb-3">
                          <label asp-for="Time" class="form-label"><i class="fas fa-clock me-2"></i>Time</label>
                          <input asp-for="Time" class="form-control" type="time" required />
                          <span asp-validation-for="Time" class="error-message"></span>
                      </div>
                      <div class="mb-3">
                          <label asp-for="Description" class="form-label"><i class="fas fa-align-left me-2"></i>Description</label>
                          <textarea asp-for="Description" class="form-control"></textarea>
                          <span asp-validation-for="Description" class="error-message"></span>
                      </div>
                      <button type="submit" class="btn btn-primary w-100"><i class="fas fa-check me-2"></i>Create</button>
                  </form>
              </div>
          </div>
      </div>
  </div>