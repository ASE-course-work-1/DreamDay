@model IEnumerable<DreamDay.Models.Wedding>
  @{
      ViewData["Title"] = "Wedding Dashboard";
  }
  <div class="row justify-content-center">
      <div class="col-12">
          <h1 class="text-center mb-4"><i class="fas fa-tachometer-alt me-2"></i>Wedding Dashboard</h1>
          <div class="row">
              @foreach (var wedding in Model)
              {
                  <div class="col-md-4 mb-4">
                      <div class="card">
                          <div class="card-body">
                              <h5 class="card-title"><i class="fas fa-heart me-2"></i>@wedding.Name</h5>
                              <p class="card-text"><i class="fas fa-calendar-alt me-2"></i>Date: @wedding.Date.ToShortDateString()</p>
                              <p class="card-text"><i class="fas fa-dollar-sign me-2"></i>Budget: $@wedding.Budget</p>
                              <div class="d-flex flex-wrap gap-2">
                                  <a href="/Checklist/Index/@wedding.Id" class="btn btn-primary btn-sm"><i class="fas fa-list-check me-2"></i>Checklist</a>
                                  <a href="/GuestList/Index/@wedding.Id" class="btn btn-secondary btn-sm"><i class="fas fa-users me-2"></i>Guests</a>
                                  <a href="/Budget/Index/@wedding.Id" class="btn btn-info btn-sm"><i class="fas fa-wallet me-2"></i>Budget</a>
                                  <a href="/Timeline/Index/@wedding.Id" class="btn btn-success btn-sm"><i class="fas fa-clock me-2"></i>Timeline</a>
                              </div>
                          </div>
                      </div>
                  </div>
              }
          </div>
      </div>
  </div>