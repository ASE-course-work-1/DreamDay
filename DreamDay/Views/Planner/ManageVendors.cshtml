@model IEnumerable<DreamDay.Models.Vendor>
  @{
      ViewData["Title"] = "Manage Vendors";
      var weddingId = ViewBag.WeddingId;
      var availableVendors = ViewBag.AvailableVendors as IEnumerable<DreamDay.Models.Vendor>;
  }
  <div class="row justify-content-center">
      <div class="col-12">
          <h1 class="text-center mb-4"><i class="fas fa-store me-2"></i>Manage Vendors</h1>
          <div class="card mb-4">
              <div class="card-body">
                  <h3>Current Vendors</h3>
                  <table class="table table-hover">
                      <thead>
                          <tr>
                              <th>Name</th>
                              <th>Type</th>
                          </tr>
                      </thead>
                      <tbody>
                          @foreach (var vendor in Model)
                          {
                              <tr>
                                  <td>@vendor.Name</td>
                                  <td>@vendor.Type</td>
                              </tr>
                          }
                      </tbody>
                  </table>
              </div>
          </div>
          <div class="card">
              <div class="card-header bg-primary text-white">
                  <h4><i class="fas fa-plus me-2"></i>Add Vendor</h4>
              </div>
              <div class="card-body">
                  <form asp-action="AddVendor" method="post" class="mt-3">
                      <input type="hidden" name="weddingId" value="@weddingId" />
                      <div class="mb-3">
                          <label class="form-label"><i class="fas fa-store me-2"></i>Select Vendor</label>
                          <select name="vendorId" class="form-select" required>
                              @foreach (var vendor in availableVendors)
                              {
                                  <option value="@vendor.Id">@vendor.Name (@vendor.Type)</option>
                              }
                          </select>
                      </div>
                      <button type="submit" class="btn btn-primary w-100"><i class="fas fa-check me-2"></i>Add</button>
                  </form>
              </div>
          </div>
      </div>
  </div>