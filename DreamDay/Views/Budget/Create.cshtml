@model DreamDay.Models.BudgetItem
  @{
      ViewData["Title"] = "Create Budget Item";
  }
  <div class="row justify-content-center">
      <div class="col-md-6">
          <div class="card">
              <div class="card-header bg-primary text-white">
                  <h4><i class="fas fa-plus me-2"></i>Create Budget Item</h4>
              </div>
              <div class="card-body">
                  <form asp-action="Create" method="post" class="mt-3">
                      <input type="hidden" asp-for="WeddingId" />
                      <div class="mb-3">
                          <label asp-for="Category" class="form-label"><i class="fas fa-list me-2"></i>Category</label>
                          <input asp-for="Category" class="form-control" required />
                          <span asp-validation-for="Category" class="error-message"></span>
                      </div>
                      <div class="mb-3">
                          <label asp-for="AllocatedAmount" class="form-label"><i class="fas fa-dollar-sign me-2"></i>Allocated Amount</label>
                          <input asp-for="AllocatedAmount" class="form-control" type="number" step="0.01" required />
                          <span asp-validation-for="AllocatedAmount" class="error-message"></span>
                      </div>
                      <div class="mb-3">
                          <label asp-for="SpentAmount" class="form-label"><i class="fas fa-dollar-sign me-2"></i>Spent Amount</label>
                          <input asp-for="SpentAmount" class="form-control" type="number" step="0.01" />
                          <span asp-validation-for="SpentAmount" class="error-message"></span>
                      </div>
                      <button type="submit" class="btn btn-primary w-100"><i class="fas fa-check me-2"></i>Create</button>
                  </form>
              </div>
          </div>
      </div>
  </div>