@model IEnumerable<DreamDay.Models.BudgetItem>
  @{
      ViewData["Title"] = "Budget Tracker";
      var weddingId = ViewBag.WeddingId;
      var totalBudget = ViewBag.TotalBudget;
      var totalSpent = ViewBag.TotalSpent;
  }
  <div class="row justify-content-center">
      <div class="col-12">
          <h1 class="text-center mb-4"><i class="fas fa-wallet me-2"></i>Budget Tracker</h1>
          <div class="alert alert-info">
              <p><i class="fas fa-dollar-sign me-2"></i>Total Budget: $@totalBudget | Total Spent: $@totalSpent 
                  @if (totalSpent > totalBudget)
                  {
                      <span class="error-message"><i class="fas fa-exclamation-triangle me-2"></i>Over Budget!</span>
                  }
              </p>
          </div>
          <a href="/Budget/Create/@weddingId" class="btn btn-success mb-3"><i class="fas fa-plus me-2"></i>Add Budget Item</a>
          <div class="card">
              <div class="card-body">
                  <table class="table table-hover">
                      <thead>
                          <tr>
                              <th>Category</th>
                              <th>Allocated</th>
                              <th>Spent</th>
                          </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model)
                          {
                              <tr>
                                  <td>@item.Category</td>
                                  <td>$@item.AllocatedAmount</td>
                                  <td>$@item.SpentAmount</td>
                              </tr>
                          }
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>