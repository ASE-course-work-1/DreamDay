@model List<DreamDay.Models.Vendor>
   @{
       ViewData["Title"] = "Vendors";
   }
   <h1>Vendor Catalog</h1>
   <div class="row">
       @foreach (var vendor in Model)
       {
           <div class="col-md-4">
               <div class="card">
                   <div class="card-body">
                       <h5 class="card-title">@vendor.Name</h5>
                       <p class="card-text">
                           Type: @vendor.Type<br />
                           Price: $@vendor.Price<br />
                           Reviews: @vendor.Reviews
                       </p>
                       <a asp-action="Details" asp-route-id="@vendor.Id" class="btn btn-primary">Details</a>
                       @if (User.IsInRole("Admin") || User.IsInRole("Planner"))
                       {
                           <a asp-action="Create" class="btn btn-success">Add Vendor</a>
                       }
                   </div>
               </div>
           </div>
       }
   </div>