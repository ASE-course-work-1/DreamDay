@model IEnumerable<DreamDay.Models.Vendor>
  @{
      ViewData["Title"] = "Vendors";
  }
  <div class="row justify-content-center">
      <div class="col-12">
          <h1 class="text-center mb-4"><i class="fas fa-store me-2"></i>Vendor Catalog</h1>
          @if (User.IsInRole("Admin") || User.IsInRole("Planner"))
          {
              <a href="/Vendor/Create" class="btn btn-success mb-3"><i class="fas fa-plus me-2"></i>Add New Vendor</a>
          }
          <div class="row">
              @foreach (var vendor in Model)
              {
                  <div class="col-md-4 mb-4">
                      <div class="card">
                          <div class="card-body">
                              <h5 class="card-title"><i class="fas fa-store me-2"></i>@vendor.Name</h5>
                              <p class="card-text"><i class="fas fa-tag me-2"></i>Type: @vendor.Type</p>
                              <p class="card-text"><i class="fas fa-dollar-sign me-2"></i>Price: $@vendor.Price</p>
                              <p class="card-text"><i class="fas fa-star me-2"></i>Reviews: @vendor.Reviews</p>
                              <a href="/Vendor/Details/@vendor.Id" class="btn btn-primary btn-sm"><i class="fas fa-info-circle me-2"></i>Details</a>
                          </div>
                      </div>
                  </div>
              }
          </div>
      </div>
  </div>