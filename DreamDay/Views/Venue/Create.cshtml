@model DreamDay.Models.Venue
  @{
      ViewData["Title"] = "Create Venue";
  }
  <div class="row justify-content-center">
      <div class="col-md-6">
          <div class="card">
              <div class="card-header bg-primary text-white">
                  <h4><i class="fas fa-plus me-2"></i>Create Venue</h4>
              </div>
              <div class="card-body">
                  <form asp-action="Create" method="post" class="mt-3">
                      <div class="mb-3">
                          <label asp-for="Name" class="form-label"><i class="fas fa-building me-2"></i>Name</label>
                          <input asp-for="Name" class="form-control" required />
                          <span asp-validation-for="Name" class="error-message"></span>
                      </div>
                      <div class="mb-3">
                          <label asp-for="Location" class="form-label"><i class="fas fa-map-marker-alt me-2"></i>Location</label>
                          <input asp-for="Location" class="form-control" required />
                          <span asp-validation-for="Location" class="error-message"></span>
                      </div>
                      <div class="mb-3">
                          <label asp-for="Price" class="form-label"><i class="fas fa-dollar-sign me-2"></i>Price</label>
                          <input asp-for="Price" class="form-control" type="number" step="0.01" required />
                          <span asp-validation-for="Price" class="error-message"></span>
                      </div>
                      <div class="mb-3">
                          <label asp-for="Description" class="form-label"><i class="fas fa-align-left me-2"></i>Description</label>
                          <textarea asp-for="Description" class="form-control"></textarea>
                          <span asp-validation-for="Description" class="error-message"></span>
                      </div>
                      <button type="submit" class="btn btn-primary w-100"><i class="fas fa-check me-2"></i>Create</button>
                  </form>
              </div>
          </div>
      </div>
  </div>