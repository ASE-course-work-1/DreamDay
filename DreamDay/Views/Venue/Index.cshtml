@model IEnumerable<DreamDay.Models.Venue>
  @{
      ViewData["Title"] = "Venues";
  }
  <div class="row justify-content-center">
      <div class="col-12">
          <h1 class="text-center mb-4"><i class="fas fa-building me-2"></i>Venue Catalog</h1>
          @if (User.IsInRole("Admin") || User.IsInRole("Planner"))
          {
              <a href="/Venue/Create" class="btn btn-success mb-3"><i class="fas fa-plus me-2"></i>Add New Venue</a>
          }
          <div class="row">
              @foreach (var venue in Model)
              {
                  <div class="col-md-4 mb-4">
                      <div class="card">
                          <div class="card-body">
                              <h5 class="card-title"><i class="fas fa-building me-2"></i>@venue.Name</h5>
                              <p class="card-text"><i class="fas fa-map-marker-alt me-2"></i>Location: @venue.Location</p>
                              <p class="card-text"><i class="fas fa-dollar-sign me-2"></i>Price: $@venue.Price</p>
                              <p class="card-text">@venue.Description</p>
                              <a href="/Venue/Details/@venue.Id" class="btn btn-primary btn-sm"><i class="fas fa-info-circle me-2"></i>Details</a>
                          </div>
                      </div>
                  </div>
              }
          </div>
      </div>
  </div>