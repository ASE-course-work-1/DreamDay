@model List<DreamDay.Models.Venue>
   @{
       ViewData["Title"] = "Venues";
   }
   <h1>Venue Catalog</h1>
   <div class="row">
       @foreach (var venue in Model)
       {
           <div class="col-md-4">
               <div class="card">
                   <div class="card-body">
                       <h5 class="card-title">@venue.Name</h5>
                       <p class="card-text">
                           Location: @venue.Location<br />
                           Price: $@venue.Price<br />
                           @venue.Description
                       </p>
                       <a asp-action="Details" asp-route-id="@venue.Id" class="btn btn-primary">Details</a>
                       @if (User.IsInRole("Admin") || User.IsInRole("Planner"))
                       {
                           <a asp-action="Create" class="btn btn-success">Add Venue</a>
                       }
                   </div>
               </div>
           </div>
       }
   </div>