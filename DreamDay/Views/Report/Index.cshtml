@model IEnumerable<DreamDay.Models.Report>
  @{
      ViewData["Title"] = "Reports";
  }
  <div class="row justify-content-center">
      <div class="col-12">
          <h1 class="text-center mb-4"><i class="fas fa-chart-bar me-2"></i>Reports</h1>
          <a href="/Report/GenerateVenuePopularity" class="btn btn-success mb-3"><i class="fas fa-plus me-2"></i>Generate Venue Popularity Report</a>
          <div class="card">
              <div class="card-body">
                  <table class="table table-hover">
                      <thead>
                          <tr>
                              <th>Type</th>
                              <th>Generated At</th>
                              <th>Data</th>
                          </tr>
                      </thead>
                      <tbody>
                          @foreach (var report in Model)
                          {
                              <tr>
                                  <td>@report.ReportType</td>
                                  <td>@report.GeneratedAt.ToString("g")</td>
                                  <td>@report.ReportData</td>
                              </tr>
                          }
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>